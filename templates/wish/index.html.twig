{% extends 'base.html.twig' %}

{% block title %}Wish index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="collab-list">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Liste des demandes des utilisateurs</h3>
                    </div>
                    <div class="card-body pt-0 px-0">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col" class="text-uppercase text-center">Prestation</th>
                                <th scope="col" class="text-uppercase text-center">Nombre de participants</th>
                                <th scope="col" class="text-uppercase text-center">Région</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for wish in wishes %}
                                {% if not wish.message %}
                                <tr>
                                    <td class="text-center align-middle">{{ wish.lesson.name }}</td>
                                    <td class="text-center align-middle">{{ wish.number }}</td>
                                    <td class="text-center align-middle">{{ wish.user.region ? wish.user.region : '' }}</td>
                                    <td  class="text-center align-middle">
                                        <a href="{{ path('wish_edit', {'id': wish.id}) }}" title="Répondre">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="3">Aucune demande pour le moment</td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
