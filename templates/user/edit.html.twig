{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <form method="post" class="col-lg-5 col-md-11 col-sm-12 mt-5 ml-5 mr-2 mb-5
            d-flex flex-column justify-content-center border profile-card">

            <h1 class="mb-3 font-weight-normal text-dark text-center">Mettre à jour mon profil</h1>
            <div class="text-white text-center d-flex flex-column">

                {{ include('user/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

                {% if app.user.circusName %}
                <div class="text-center">
                    <a class="mt-3 mb-5 btn btn-outline-dark" href="{{ path('circus_profile', {'user': app.user.id}) }}">
                        Retour à mon profil
                        </a>
                    </a>
                </div>
                {% else %}
                <div class="text-center">
                    <a class="mt-3 mb-5 btn btn-outline-dark" href="{{ path('app_profile', {'user': app.user.id}) }}">
                        Retour à mon profil
                    </a>
                    </a>
                </div>
                {% endif %}
            </div>
        </form>
    </div>
</div>

{% endblock %}
